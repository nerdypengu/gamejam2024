{
    "compilerOptions": {
        "target": "es2020",
        "module": "System",
        "declaration": true,
        "baseUrl": ".",
        "out": "../../js/plugins/build/ARPG_Core.js",
        "inlineSourceMap": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        // "isolatedModules": true,
        "esModuleInterop": true
    },
    "include": [
        "../decl/*",
        "../decl/rmmz-typedefine/*",
        "../decl/rmmz-typedefine/RMMZData/*",
        "../decl/rmmz-typedefine/rmmz_core/*",
        "../decl/rmmz-typedefine/rmmz_managers/*",
        "../decl/rmmz-typedefine/rmmz_objects/*",
        "../decl/rmmz-typedefine/rmmz_scenes/*",
        "../decl/rmmz-typedefine/rmmz_sprites/*",
        "../decl/rmmz-typedefine/rmmz_windows/*",
        "./decl/*",
        "../CommonLibrary/*",
        "./ARPG_Core/*",
        "./ARPG_ItemShortcut/*",
        "./ARPG_ActorHpGauge/*",
        "./ARPG_DamagePopup/*",
        "./ARPG_DynamicEvent/*",
        "./ARPG_State/*",
        "./ARPG_WeaponAnimation/*",
        "./ARPG_TargetSelect/*",
        "./*"
    ]
}
